<% roundedbox do -%>
  <dt>Title:</dt><dd class="title"><%=h @source.title %></dd>
  <dt>Abbreviation:</dt><dd class="title"><%=h @source.abbreviation %></dd>
  <dt>Code:</dt><dd class="tag"><%=h @source.code %></dd>
  <dt>Language:</dt><dd class="language"><%= link_to_language @source.language %></dd>
  <dt>Edition:</dt><dd><%=h @source.edition %></dd>
  <dt>Electronic source:</dt><dd><%= @source.url ? link_to(@source.source, @source.url) : @source.source %></dd>
  <dt>Editor of electronic version:</dt><dd><%=h @source.editor %></dd>
  <%= link_to_resources @source, :index, :edit %>
<% end %>

<% layer :statistics do -%>
  <%= statistics "Completion (sentences)", "sentence", @sentence_completion_stats %>
  <%= statistics "Completion (words/text tokens)", "token", @text_token_completion_stats %>
  <%= statistics "Annotators", "sentence", @annotated_by_stats %>
  <%= statistics "Reviewers", "sentence", @reviewed_by_stats %>
<% end %>
