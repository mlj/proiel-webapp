%tr
  %td.reference
    != link_to annotation.citation, annotation.sentence
    != completion_rate annotation.sentence.completion
  %td.left
    != format_sentence annotation.previous_objects, :length_limit => -5
  %td.centre.highlight
    != format_token_form annotation
  %td.right
    != format_sentence annotation.next_objects, :length_limit => 5
