- title "Sign in"

- semantic_form_for resource_name, resource, :url => session_path(resource_name) do |f|
  != f.input :login, :label => 'User name'
  != f.input :password

  - if devise_mapping.rememberable?
    != f.check_box :remember_me

  != f.submit "Sign in"

!= render :partial => "shared/devise_links"
